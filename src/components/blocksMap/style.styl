.grass
    background-image: url('./../../../public/images/grass.jpg')
    background-size: 100% 100%

.snake-head
    background-image: url('./../../../public/images/grass.jpg') 
    background-size: 100% 100%
    display: flex
    &:before
        content: ' '
        margin: auto
        display: block
        width 80%
        height 80%
        background-repeat: no-repeat
        border-radius:  50%
        border: 4px solid #000
        background-size: 80% 80%
        background-position: center
        background-image: url('./../../../public/images/head.png')


.snake-body
    background-image: url('./../../../public/images/grass.jpg') 
    background-size: 100% 100%
    display: flex
    &:before 
        content: ' '
        margin: auto
        display: block
        width 80%
        height 80%      
        border-radius:  50%
        border: 4px solid #000

.snake-tail
    background-image: url('./../../../public/images/grass.jpg') 
    background-size: 100% 100%
    display: flex
    &:before 
        content: ' '
        margin: auto
        display: block
        width 50%
        height 50%      
        border-radius:  50%
        border: 4px solid #000


.plod
    background-image: url('./../../../public/images/grass.jpg')   
    display: flex 
    background-size: 100% 100%
    &::before
        content: ' '
        display: block 
        background-image: url('./../../../public/images/plod.png') 
        background-size: 100% 100%
        width: 80%
        height 80%
        margin: auto