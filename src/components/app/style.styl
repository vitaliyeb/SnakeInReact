.snake-map
    display: grid 
    width: 100%
    height 100%
    grid-template-columns: repeat(10, 1fr)
    grid-template-rows: repeat(10, 1fr)


body 
    background-image: url('./../../../public/images/bgPage.png') 
    background-size: 100% 100%   



.game-window
    width: clamp(310px, 100vw, 800px)
    height clamp(310px, 100vw, 800px)
    border: 1px solid #000
    position: relative
    margin: auto

.score
    position: absolute
    top: 0
    font-family cursive
    margin: 0
    background-color: #6251515c
    right 0
    font-size: clamp(18px, 3vw, 24px)
    color: #fff
    font-weight: bold
    padding: 3px 25px    